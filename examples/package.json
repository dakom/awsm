{
    "author": "David Komer <david.komer@gmail.com>",
    "name": "awsm",
    "version": "0.1.0",
    "repository": "https://github.com/dakom/awsm",
    "license": "(MIT OR Apache-2.0)",
    "scripts": {
        "clean": "rimraf ./dist",
        "deploy": "npm-run-all clean _bundle:all _copy:all _deploy:netlify",
        "_bundle:all": "npm-run-all _bundle:web",
        "_bundle:web": "cd web && npm run bundle && cd ..",
        "_copy:all": "npm-run-all _copy:web _copy:static",
        "_copy:web": "cpy **/* ../../dist/web --cwd=web/dist --parents",
        "_copy:static": "cpy **/* ../dist --cwd=_static --parents",
        "_deploy:netlify": "netlify deploy --prod --dir=dist --site=c6d71941-94ea-494c-a5f6-429f4b8feb9e"
    },
    "devDependencies": {
        "cpy": "^7.2.0",
        "cpy-cli": "^2.0.0",
        "cross-env": "^5.2.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^2.6.3"
    }
}