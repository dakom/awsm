{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "diagnostics": true,
        "outDir": "dist",
        "allowJs": true,
        "lib": [
            "esnext",
            "es6",
            "es5",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/@types/*",
                "*"
              ],
            "@events/*": ["typescript/events/*"],
            "@state/*": ["typescript/state/*"],
            "@ui/*": ["typescript/ui/*"],
            "@utils/*": ["typescript/utils/*"],
            "@config/*": ["typescript/config/*"],
        },
    },
    "include": [
        "./typescript/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "coverage"
    ]
}
